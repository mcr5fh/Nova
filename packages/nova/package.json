{
  "name": "nova",
  "version": "0.1.0",
  "type": "module",
  "description": "Problem definition and solution design workflows",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "nova": "./dist/bin/nova.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start:problem": "node dist/bin/nova.js problem start",
    "start:solution": "node dist/bin/nova.js solution start",
    "dev:problem": "tsx bin/nova.ts problem start",
    "dev:solution": "tsx bin/nova.ts solution start",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "problem-definition",
    "solution-design",
    "product-management",
    "ai",
    "claude",
    "conversational-agent"
  ],
  "license": "MIT"
}
